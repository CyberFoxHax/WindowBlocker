<Window x:Class="WindowBlocker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:WindowBlocker.Views"
        Title="WindowBlocker"
        Height="407"
        Width="451" Icon="/WindowBlocker;component/icon.ico"
        Background="Orange"
    >
    <Grid x:Name="Grid">
        <views:Taskbar x:Name="Taskbar" />
        <views:WindowList Margin="0,0,0,40" x:Name="WindowList" />
        <Button Height="25" Width="80" Content="Save" Click="BtnSave_OnClick" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,95,10" />
        <Button Height="25" Width="80" Content="Close" Click="BtnClose_OnClick" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" />
    </Grid>
</Window>
